<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="web.contact.handler.class">Desarrolla2\Bundle\WebBundle\Handler\Contact</parameter>
        <parameter key="web.sanitizer.class">Desarrolla2\RSSClient\Sanitizer\Sanitizer</parameter>
    </parameters>

    <services>
        <service id="web.sanitizer" class="%web.sanitizer.class%" public="false">
            <argument type="string">%kernel.cache_dir%</argument>
        </service>
        <service id="web.contact.handler" class="%web.contact.handler.class%">
            <argument type="service" id="mailer" />
            <argument type="service" id="templating" />
            <argument type="service" id="web.sanitizer" />
            <argument type="string" id="web.contact.title" />            
            <argument type="string" id="web.contact.email" />
        </service>
    </services>    
</container>